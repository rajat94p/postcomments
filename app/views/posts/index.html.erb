<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.post %>
      <% if current_user %>
      
          <li><%= link_to "Edit", edit_post_path(post) %> |
            <%= link_to "Destroy", post_path(post), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
          </li>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Back", root_path %>